<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_50_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reactive_result_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reactive_result_text"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_50_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reactive_brightness_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Reactive Brightness Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/medium_space"
        android:layout_marginHorizontal="@dimen/small_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_50_guideline"
        app:layout_constraintTop_toBottomOf="@id/reactive_result_title_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reactive_orientation_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Reactive Orientation Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginHorizontal="@dimen/small_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_50_guideline"
        app:layout_constraintTop_toBottomOf="@id/reactive_brightness_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reactive_acceleration_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Reactive Acceleration Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginHorizontal="@dimen/small_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_50_guideline"
        app:layout_constraintTop_toBottomOf="@id/reactive_orientation_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reactive_brightness_max_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Reactive Max Brightness Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginEnd="@dimen/smallest_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/reactive_brightness_min_result_text"
        app:layout_constraintTop_toBottomOf="@id/reactive_acceleration_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reactive_brightness_min_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Reactive Min Brightness Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginEnd="@dimen/small_space"
        android:layout_marginStart="@dimen/smallest_space"
        app:layout_constraintStart_toEndOf="@id/reactive_brightness_max_result_text"
        app:layout_constraintEnd_toStartOf="@id/vertical_50_guideline"
        app:layout_constraintTop_toBottomOf="@id/reactive_acceleration_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reactive_orientation_max_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Reactive Max Orientation Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginEnd="@dimen/smallest_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/reactive_orientation_min_result_text"
        app:layout_constraintTop_toBottomOf="@id/reactive_brightness_max_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reactive_orientation_min_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Reactive Min Orientation Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginEnd="@dimen/small_space"
        android:layout_marginStart="@dimen/smallest_space"
        app:layout_constraintStart_toEndOf="@id/reactive_orientation_max_result_text"
        app:layout_constraintEnd_toStartOf="@id/vertical_50_guideline"
        app:layout_constraintTop_toBottomOf="@id/reactive_brightness_min_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reactive_acceleration_max_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Reactive Max Acceleration Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginEnd="@dimen/smallest_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/reactive_acceleration_min_result_text"
        app:layout_constraintTop_toBottomOf="@id/reactive_orientation_max_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reactive_acceleration_min_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Reactive Min Acceleration Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginEnd="@dimen/small_space"
        android:layout_marginStart="@dimen/smallest_space"
        app:layout_constraintStart_toEndOf="@id/reactive_acceleration_max_result_text"
        app:layout_constraintEnd_toStartOf="@id/vertical_50_guideline"
        app:layout_constraintTop_toBottomOf="@id/reactive_orientation_min_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reactive_data_collected_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginEnd="@dimen/small_space"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_50_guideline"
        app:layout_constraintTop_toBottomOf="@id/reactive_acceleration_max_result_text"
        tools:text="Data performance \n10/100 = 30%" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reactive_data_generated_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginEnd="@dimen/small_space"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_50_guideline"
        app:layout_constraintTop_toBottomOf="@id/reactive_data_collected_text"
        tools:text="Data performance \n10/100 = 30%" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reactive_data_performance_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginEnd="@dimen/small_space"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_50_guideline"
        app:layout_constraintTop_toBottomOf="@id/reactive_data_generated_text"
        tools:text="Data performance \n10/100 = 30%" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_result_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/functional_result_text"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        app:layout_constraintStart_toEndOf="@id/vertical_50_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_brightness_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Functional Brightness Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/medium_space"
        android:layout_marginHorizontal="@dimen/small_space"
        app:layout_constraintStart_toEndOf="@id/vertical_50_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/functional_result_title_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_orientation_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Functional Orientation Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginHorizontal="@dimen/small_space"
        app:layout_constraintStart_toEndOf="@id/vertical_50_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/functional_brightness_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_acceleration_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Functional Acceleration Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginHorizontal="@dimen/small_space"
        app:layout_constraintStart_toEndOf="@id/vertical_50_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/functional_orientation_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_brightness_max_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Functional Max Brightness Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginEnd="@dimen/smallest_space"
        app:layout_constraintStart_toEndOf="@id/vertical_50_guideline"
        app:layout_constraintEnd_toStartOf="@id/functional_brightness_min_result_text"
        app:layout_constraintTop_toBottomOf="@id/functional_acceleration_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_brightness_min_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Functional Min Brightness Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginEnd="@dimen/small_space"
        android:layout_marginStart="@dimen/smallest_space"
        app:layout_constraintStart_toEndOf="@id/functional_brightness_max_result_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/functional_acceleration_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_orientation_max_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Functional Max Orientation Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginEnd="@dimen/smallest_space"
        app:layout_constraintStart_toEndOf="@id/vertical_50_guideline"
        app:layout_constraintEnd_toStartOf="@id/functional_orientation_min_result_text"
        app:layout_constraintTop_toBottomOf="@id/functional_brightness_max_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_orientation_min_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Functional Min Orientation Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginEnd="@dimen/small_space"
        android:layout_marginStart="@dimen/smallest_space"
        app:layout_constraintStart_toEndOf="@id/functional_orientation_max_result_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/functional_brightness_min_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_acceleration_max_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Functional Max Acceleration Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginEnd="@dimen/smallest_space"
        app:layout_constraintStart_toEndOf="@id/vertical_50_guideline"
        app:layout_constraintEnd_toStartOf="@id/functional_acceleration_min_result_text"
        app:layout_constraintTop_toBottomOf="@id/functional_orientation_max_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_acceleration_min_result_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        tools:text="Functional Min Acceleration Result"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginEnd="@dimen/small_space"
        android:layout_marginStart="@dimen/smallest_space"
        app:layout_constraintStart_toEndOf="@id/functional_acceleration_max_result_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/functional_orientation_min_result_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_data_collected_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginEnd="@dimen/small_space"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/vertical_50_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/functional_acceleration_max_result_text"
        tools:text="Data performance \n10/100 = 30%" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_data_generated_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginEnd="@dimen/small_space"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/vertical_50_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/functional_data_collected_text"
        tools:text="Data performance \n10/100 = 30%" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_data_performance_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginEnd="@dimen/small_space"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/vertical_50_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/functional_data_generated_text"
        tools:text="Data performance \n10/100 = 30%" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_update_sensor_data_button"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_space"
        android:text="@string/start_update_data_text"
        style="@style/AppTheme.Button.WithStateColor"
        app:layout_constraintBottom_toTopOf="@id/stop_update_sensor_data_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/vertical_50_guideline"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:text="@string/bar_description"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/vertical_50_guideline"
        app:layout_constraintEnd_toEndOf="@id/functional_delay_data_collect_bar"
        app:layout_constraintTop_toTopOf="@id/start_update_sensor_data_button"
        app:layout_constraintBottom_toBottomOf="@id/start_update_sensor_data_button"
        app:layout_constraintStart_toStartOf="@id/functional_delay_data_collect_bar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/stop_update_sensor_data_button"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_space"
        android:text="@string/stop_update_data_text"
        style="@style/AppTheme.Button.White"
        app:layout_constraintBottom_toTopOf="@id/clear_sensor_data_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_50_guideline"/>
    
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_delay_data_collect_min_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min_bar_value"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/functional_delay_data_collect_bar"
        app:layout_constraintBottom_toTopOf="@id/functional_delay_data_collect_bar" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_delay_data_collect_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_bar_value"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/functional_delay_data_collect_min_value_text"
        app:layout_constraintEnd_toStartOf="@id/functional_delay_data_collect_max_value_text"
        app:layout_constraintBottom_toTopOf="@id/functional_delay_data_collect_bar" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/functional_delay_data_collect_max_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/max_bar_value"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/functional_delay_data_collect_bar"
        app:layout_constraintBottom_toTopOf="@id/functional_delay_data_collect_bar" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/functional_delay_data_collect_bar"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginEnd="@dimen/small_space"
        android:layout_marginBottom="@dimen/small_space"
        android:max="1000"
        android:progress="500"
        app:layout_constraintStart_toEndOf="@id/vertical_50_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/stop_update_sensor_data_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/clear_sensor_data_button"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginEnd="@dimen/small_space"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginBottom="@dimen/big_space"
        android:text="@string/clear_sensor_data_text"
        style="@style/AppTheme.Button.White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/vertical_50_guideline"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>