<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/AppTheme.CardView.Default" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/small_space">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/team_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            style="@style/AppTheme.MaterialTextView.Default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Equipo numero 1"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/team_sport_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            style="@style/AppTheme.MaterialTextView.Default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/team_name_label"
            tools:text="Football"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/team_players_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            style="@style/AppTheme.MaterialTextView.Default"
            app:layout_constraintTop_toBottomOf="@id/team_sport_name_label"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="11 Jugadores"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
